# Exit if not running interactively
[ -z "$PS1" ] && return

# Disable Oh My Zsh automatic updates and skip compfix check for speed
export DISABLE_AUTO_UPDATE=true
export ZSH_DISABLE_COMPFIX=true

# Set PATH
export PATH="$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH"

# Path to your Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# Theme
ZSH_THEME="spaceship"

# Example: Disable certain spaceship segments (uncomment and adjust if needed)
# export SPACESHIP_PROMPT_ORDER=(time user dir host)
# export SPACESHIP_GIT_SHOW=false
# export SPACESHIP_DIR_TRUNC=1

# Configure oh-my-zsh plugins
zstyle :omz:plugins:ssh-agent identities id_ed25519
zstyle :omz:plugins:ssh-agent lifetime 1h

plugins=(
	fzf
	git
	ssh-agent
	tmux
	zsh-autosuggestions
	zsh-syntax-highlighting
)

# Set up NVM and Node-related commands
export NVM_DIR="$HOME/.nvm"

# Directly load NVM, Node and pnpm (no lazy loading)
if [ -s "$NVM_DIR/nvm.sh" ]; then
    # Source NVM and load the default Node version
    source "$NVM_DIR/nvm.sh"
    
    # Source bash completion if available
    [ -s "$NVM_DIR/bash_completion" ] && source "$NVM_DIR/bash_completion"
    
    # Ensure node and pnpm are available immediately
    if command -v node >/dev/null 2>&1; then
        # Node is now directly available for use
        NODE_VERSION=$(node --version)
        echo "Node.js $NODE_VERSION is ready"
    fi
    
    # Lazy load the remaining Node-related commands for faster shell startup
    load_remaining_cmds() {
        # Remove this function and all placeholder functions
        unset -f load_remaining_cmds npm npx yarn
        
        # Return true so commands can be executed
        return 0
    }
    
    # Create placeholder functions for other Node-related commands (excluding node and pnpm)
    for cmd in npm npx yarn; do
        # Create a function for each command
        eval "$cmd() { 
            # Load remaining commands first time any is used
            load_remaining_cmds
            # Then execute the original command
            command $cmd \"\$@\"
        }"
    done
fi

# Load Oh My Zsh
source "$ZSH/oh-my-zsh.sh"

# Enable vi mode keybindings
bindkey -v

# Load additional shell configurations from your config directory.
for conf in "$HOME/.config/shell/"*.sh; do
	[ -f "$conf" ] && . "$conf"
done
