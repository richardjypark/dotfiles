[".oh-my-zsh"]
type = "archive"
# Pinned to an explicit commit for reproducible installs.
# Update flow: bump commit after validating upstream changes.
url = "https://github.com/ohmyzsh/ohmyzsh/archive/9df4ea095fe27ccd0ee95f2d34bab884c4a75585.tar.gz"
exact = true
stripComponents = 1
refreshPeriod = "168h"
exclude = ["*/custom"]

[".oh-my-zsh/custom/plugins/zsh-syntax-highlighting"]
type = "archive"
# Pinned release tag for deterministic fetches.
url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/refs/tags/0.8.0.tar.gz"
exact = true
stripComponents = 1
refreshPeriod = "168h"
exclude = ["*/.editorconfig", "*/.gitattributes", "*/.github", "*/.gitignore"]

[".oh-my-zsh/custom/plugins/zsh-autosuggestions"]
type = "archive"
# Pinned release tag for deterministic fetches.
url = "https://github.com/zsh-users/zsh-autosuggestions/archive/refs/tags/v0.7.1.tar.gz"
exact = true
stripComponents = 1
refreshPeriod = "168h"
exclude = ["*/.editorconfig", "*/.gitattributes", "*/.github", "*/.gitignore"]


[".local/share/fzf"]
type = "git-repo"
url = "https://github.com/junegunn/fzf.git"
exact = true
refreshPeriod = "168h"
clone.args = ["--depth=1", "--branch", "v0.67.0"]
pull.args = ["--ff-only"]

{{ if ne .chezmoi.hostname "vultr" }}
[".nvm"]
type = "archive"
url = "https://github.com/nvm-sh/nvm/archive/{{ .nvm.version }}.tar.gz"
stripComponents = 1
refreshPeriod = "168h"
{{ end }}
